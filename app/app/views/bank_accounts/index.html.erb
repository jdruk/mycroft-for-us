<div class="ui aligned segment ">

  <h1>Contas</h1>

  <table class="ui center aligned table">
    <thead>
      <tr>
        <th>Nome da conta</th>
        <th>Banco</th>
        <th>Conta</th>
        <th>Agência</th>
        <th>Digito</th>
        <th colspan="3"class="ui center aligned"><i class="clipboard icon"></i>Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.name %></td>
        <td><%= bank_account.bank.name %></td>
        <td><%= bank_account.account %></td>
        <td><%= bank_account.agency %></td>
        <td><%= bank_account.digit %></td>
        <td><%= link_to 'Detalhes', bank_account, 'data-tooltip'=>"Informações da conta" ,'data-position' => "top left", 'data-inverted'=>"",class: 'ui grey basic button' %></td>
        <td><%= link_to 'Editar', edit_bank_account_path(bank_account), 'data-tooltip'=>"Editar informações da conta" ,'data-position' => "top left", 'data-inverted'=>"",
           class: 'ui black basic button' %></td>
        <td><%= link_to 'Excluir', bank_account, 'data-tooltip'=>"Excluir link" ,'data-position' => "top left", 'data-inverted'=>"", class: 'ui red basic button', method: :delete, data: { confirm: 'Você realmente deseja excluir esta conta?'} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nova Conta', new_bank_account_path, class: 'ui teal basic button', 'data-tooltip'=>"Adicionar uma nova conta",'data-position' => "top left", 'data-inverted'=>"" %>
  <%= link_to 'Voltar', financial_dashboard_path, class: 'ui basic button', 'data-tooltip'=>"Voltar para financeiro",'data-position' => "top left", 'data-inverted'=>"" %>
</div>