<p id="notice"><%= notice %></p>

<h1>Bank Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bank</th>
      <th>Account</th>
      <th>Agency</th>
      <th>Digit</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.name %></td>
        <td><%= bank_account.bank %></td>
        <td><%= bank_account.account %></td>
        <td><%= bank_account.agency %></td>
        <td><%= bank_account.digit %></td>
        <td><%= bank_account.visible %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank Account', new_bank_account_path %>
